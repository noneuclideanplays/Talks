    \item[]<5->
     \begin{center}\begin{tikzcd}[color=darkgreen]
H \arrow[r, "\varepsilon"] \arrow[d, "\eta"'] & \mathbb{C} \arrow[r, "\eta"] & A \\
H\otimes A \arrow[rru, "\alpha"']             &                       &
\end{tikzcd}\end{center}
\end{itemize}

